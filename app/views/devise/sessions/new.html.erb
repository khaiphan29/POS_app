<div class="w-full m-auto ">
  <div class="border-stripes mx-auto p-10 w-1/4 flex flex-col items-center">
    <h2>Đăng nhập</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-1/2" })  do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "Mật khẩu" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex flex-row items-center justify-center gap-4">
          <%= f.check_box :remember_me, class: "!w-5 h-5 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, "Ghi nhớ đăng nhập" %>
        </div>
      <% end %>

      <div class="actions mt-2">
        <%= f.submit "Đăng nhập" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
